{
    "name": "p2-es-monorepo",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "repository": "https://github.com/pmndrs/p2-es",
    "author": "Stefan Hedman <schteppe@gmail.com> (http://steffe.se)",
    "contributors": [
        "Jörg Jäckel (https://github.com/joergjaeckel)",
        "Isaac Mason <isaac@isaacmason.com> (https://github.com/isaac-mason)"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.22.0",
        "husky": "^7.0.4"
    },
    "scripts": {
        "prepare": "husky install",
        "build": "yarn workspaces run build",
        "test": "(cd packages/p2-es && yarn test)",
        "change": "yarn changeset",
        "bump": "yarn changeset version && yarn install --mode update-lockfile",
        "release": "yarn build && yarn test && changeset publish"
    },
    "workspaces": [
        "packages/p2-es",
        "apps/p2-es-docs",
        "apps/p2-es-examples",
        "apps/p2-es-demos",
        "apps/p2-es-website"
    ]
}